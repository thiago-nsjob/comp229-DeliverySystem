@model IEnumerable<FoodDelivery.Models.PaymentMethod>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CardNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecurityCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecurityCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerNavigation.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPaymentMethod">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPaymentMethod">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPaymentMethod">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
