@model IEnumerable<FoodDelivery.Models.DeliveryAddress>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAddress">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdAddress">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAddress">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
