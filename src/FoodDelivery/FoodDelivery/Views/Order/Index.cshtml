@model IEnumerable<FoodDelivery.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RestaurantNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatusNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentMethodNavigation)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.OrderNetAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderTax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderGrossAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerNotes)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressNavigation.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestaurantNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatusNavigation.StatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethodNavigation.IdPaymentMethod )
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNetAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderGrossAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerNotes)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.IdOrder">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdOrder">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdOrder">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
